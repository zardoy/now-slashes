{
    "name": "no-windows-slashes",
    "displayName": "No Windows Slashes",
    "publisher": "zardoy",
    "description": "Normalize windows slashes \\ -> / whenever you focus window",
    "icon": "resources/icon.png",
    "version": "0.0.1",
    "categories": [
        "Other"
    ],
    "keywords": [
        "path",
        "relative path",
        "forward slashes",
        "normalize",
        "unix"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "contributes": {
        "configuration": {
            "title": "GitHub Manager",
            "properties": {
                "web.enable": {
                    "type": "boolean",
                    "description": "Wether to enable extension on web",
                    "default": false
                },
                "normalizeRelativePath": {
                    "type": "string",
                    "description": "How to convert relative paths\nPath is a string that have / or \\",
                    "enum": [
                        "disable",
                        "alwaysRemove",
                        "alwaysAdd"
                    ],
                    "markdownEnumDescriptions": [
                        "",
                        "Always remove ./ from path start",
                        "Always ./ to non-absolute paths"
                    ],
                    "default": "disable"
                },
                "normalizeOnlyRelativePath": {
                    "type": "boolean",
                    "description": "Enable to disable replacing forward slashes on windows and enabe",
                    "default": false
                }
            }
        }
    },
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        },
        "virtualWorkspaces": true
    },
    "scripts": {
        "start": "vscode-framework start"
    },
    "devDependencies": {
        "@types/node": "16.11.7",
        "@types/vscode": "^1.63.1",
        "@zardoy/tsconfig": "^1.3.1",
        "eslint": "^7.32.0",
        "eslint-plugin-zardoy-config": "^0.1.4",
        "kleur": "^4.1.4",
        "typescript": "^4.5.4"
    },
    "dependencies": {
        "vscode-framework": "^0.0.18"
    },
    "license": "MIT"
}
