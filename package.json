{
    "name": "no-windows-slashes",
    "displayName": "No Windows Slashes",
    "publisher": "zardoy",
    "description": "Normalize windows slashes \\ -> / (on window focus & command)",
    "icon": "resources/icon.png",
    "version": "0.0.0-dev",
    "categories": [
        "Other"
    ],
    "keywords": [
        "windows",
        "slashes",
        "forward slashes",
        "normalize",
        "unix"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "contributes": {
        "commands": [
            {
                "command": "fixedCopyFilePath",
                "title": "Fixed Copy File Path"
            }
        ],
        "configuration": {
            "properties": {
                "enable": {
                    "type": "boolean",
                    "default": true
                }
            }
        }
    },
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        },
        "virtualWorkspaces": true
    },
    "scripts": {
        "start": "vscode-framework start",
        "build": "vscode-framework build"
    },
    "devDependencies": {
        "@types/node": "16.11.7",
        "@types/vscode": "^1.62.0",
        "@zardoy/tsconfig": "^1.2.2",
        "eslint": "^7.32.0",
        "eslint-plugin-zardoy-config": "^0.1.3",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "vscode-framework": "^0.0.18"
    },
    "license": "MIT",
    "prettier": {
        "semi": false,
        "singleQuote": true,
        "proseWrap": "never",
        "tabWidth": 4,
        "trailingComma": "all",
        "arrowParens": "avoid",
        "printWidth": 160,
        "endOfLine": "auto"
    }
}
